<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="000000000000_create_table_student" author="Tatyana Chernyadieva">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="student"/>
            </not>
        </preConditions>

        <sql>
            create table student
            (
                id integer generated by default as identity primary key,
                first_name varchar(50) not null,
                last_name varchar(50) not null,
                age integer check (age > 0),
                university varchar,
                faculty varchar,
                time_create timestamp
            )
        </sql>
    </changeSet>
</databaseChangeLog>